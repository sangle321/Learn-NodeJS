extends ../layouts/common.pug


block content
    h1 Login
    if errors
       each error in errors
            .alert.alert-danger= error

    form(action='/auth/login', method='POST' class="d-flex-column")
        .form-group
            label(for="Email") Email 
            input#Email( name='email' type="text" class="form-control" value = value ? value.email : '')
            label(for="password") Password 
            input#password( name='password' type="password" class="form-control" value = value ? value.email : '')
        button(class="btn btn-primary ml-2") Login