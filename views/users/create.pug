extends ../layouts/common.pug


block content
    h1 Create Users
    if errors
       each error in errors
            .alert.alert-danger= error

    form(action='/users/create', method='POST' class="d-flex-column")
        .form-group
            label(for="name") Name 
            input#name( name='name' type="text" class="form-control" value=value ? value.name : '')
            label(for="phone") Phone 
            input#phone( name='phone' type="text" class="form-control" value=value ? value.phone : '')
        button(class="btn btn-primary ml-2") Create