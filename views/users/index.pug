extends ../layouts/common.pug

block content

  h1.mb-4 
    span.mr-3 Users
    a.btn.btn-primary(href='/users/create') New
  
  .d-flex.align-items-center
    form(action="/users/search" method='GET' class="d-flex mb-5")
      input(type='text' class="form-control ml-10" , name='q')
      button(class="btn btn-primary ml-2") Search

  table.table
    tr
      th Name
      th Phone
      th Action

    each user in users
      tr
        td= user.name
        td= user.phone
        td
         a.btn.btn-light(href='users/'+ user.id) view